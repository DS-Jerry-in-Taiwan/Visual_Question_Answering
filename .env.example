# ==========================================
# API Keys
# ==========================================
# OpenAI API 金鑰
OPENAI_API_KEY=your_openai_api_key_here
# Anthropic API 金鑰
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# Backend Configuration
# ==========================================
# 後端主機位址
BACKEND_HOST=0.0.0.0
# 後端服務埠號
BACKEND_PORT=8000
# 是否啟用除錯模式（True/False）
DEBUG_MODE=True

# ==========================================
# VLM-RAG Configuration
# ==========================================
# VLM-RAG 服務端點
VLM_RAG_ENDPOINT=http://localhost:8001
# VLM-RAG API 金鑰
VLM_RAG_API_KEY=your_vlm_rag_api_key

# ==========================================
# LLM Configuration
# ==========================================
# LLM 模型名稱
LLM_MODEL=gpt-4o-mini
# LLM 生成溫度（0.0-1.0）
LLM_TEMPERATURE=0.3
# LLM 最大回傳 token 數
LLM_MAX_TOKENS=1000

# ==========================================
# Retrieval Configuration
# ==========================================
# 檢索返回前 K 筆
RETRIEVAL_TOP_K=10
# 檢索分數閾值
RETRIEVAL_THRESHOLD=0.5

# ==========================================
# Logging Configuration
# ==========================================
# 日誌等級（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO
# 日誌檔案路徑
LOG_FILE=logs/vqa_system.log

# ==========================================
# Database Configuration (Optional)
# ==========================================
# 資料庫連線字串（可選）
DATABASE_URL=sqlite:///./vqa_system.db
